# СКУД Enhanced - Переменные окружения
# Скопируйте этот файл в .env и заполните своими данными

# База данных
DATABASE_URL=sqlite:///./data/skud.db

# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_ADMIN_ID=YOUR_ADMIN_ID_HERE

# Flask приложение
FLASK_SECRET_KEY=your-secret-key-here
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# JWT для безопасных ссылок регистрации
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
REGISTRATION_LINK_EXPIRE_HOURS=24

# ESP32 API
ESP32_API_KEY=your-esp32-api-key-here

# Уведомления
DEFAULT_ADMIN_NOTIFICATIONS=True
DEFAULT_EMPLOYEE_NOTIFICATIONS=True

# Автозакрытие дней
AUTO_CLOSE_TIME=17:00
AUTO_CLOSE_ENABLED=True

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/skud.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Отчеты
REPORTS_DIR=data/reports
TEMP_DIR=data/temp

# Веб-интерфейс
WEB_URL=http://localhost:5000
WEBAPP_URL=http://localhost:5000/telegram-webapp 